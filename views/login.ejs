<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>Taskio Signin</title>
</head>

<body>
    <div class="global-container">
        <div class="card login-form" id="box">
            <div class="card-body">
                <h3 class="card-title text-center">Log in to Taskio</h3>
                <div class="card-text">
                    <% if (locals.messages.errors) { %>
                        <% messages.errors.forEach( el => { %>
                            <div class="alert alert-danger"><%= el.msg %></div>
                        <% }) %>    
                    <% } %>
                    <% if (locals.messages.info) { %>
                        <% messages.info.forEach( el => { %>
                            <div class="alert alert-danger"><%= el.msg %></div>
                        <% }) %>    
                    <% } %>
                    <a class="button google" href="/login/federated/google">Sign in with Google</a>
                    <form action="/login" method="POST">
                        <!-- to error: add class "has-danger" -->
                        <div class="form-group">
                            <label for="exampleInputUsername1">Username</label>
                            <input type="email" class="form-control form-control-sm" id="exampleInputUsername1" aria-describedby="UsernameHelp" name="username">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control form-control-sm" id="exampleInputPassword1" name="password">
                            <a href="#" style="float:right;font-size:12px;">Forgot password?</a>
                        </div>

                        <button type="submit" class="btn btn-dark btn-block w-100">Sign in</button>
                        
                        <div class="sign-up">
                            Don't have an account? <a href="/signup">Sign-up!</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <canvas id="gradient-canvas">
    </canvas>
    <script src="js/home.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>